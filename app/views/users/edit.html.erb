<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
         <h1>User info</h1>
         <% if @user.errors.any? %>
         <h3 class="text-danger"><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
         <% @user.errors.full_messages.each do |message| %>
         <ul>
         <li class="text-danger"><%= message %></li>
         </ul>
         <% end %>
         <% end %>
          <%= form_with model: @user, local:true do |f| %>
         <div class="form-group">
           <h5>Name</h5>
           <%= f.text_field :name, autofocus: true, id:"inputName", placeholder: "名前"%>
         </div>
         <div class="form-group">
           <h5>Image</h5>
           <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
         </div>
         <div class="form-group">
           <h5>Introduction</h5>
           <%= f.text_area :introduction, autofocus: true, id:"inputintroduction", placeholder:"感想"%>
         </div>
         <div class="form-group">
             <%= f.submit "Update User", class: "btn btn-secondary" %>
          <% end %>
         </div>  
       </div>
     </div>
   </div>
</main>